<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/password_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TextView
                android:id="@+id/password_bar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="14dp"
                android:text="修改密码"
                android:textSize="20sp"
                android:textColor="#0f0000">
            </TextView>

            <RelativeLayout
                android:id="@+id/password_back"
                android:layout_width="58dp"
                android:layout_height="57dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/back12"
                    android:layout_centerInParent="true">
                </ImageView>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/login_saw_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="55dp"
            android:background="#f0f0f0">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_bar">

            <EditText
                android:id="@+id/password_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:hint="请输入原密码"
                android:textSize="18sp"
                android:singleLine="true"
                android:textStyle="bold"
                android:paddingBottom="17dip"
                android:paddingLeft="8dip"
                android:inputType="textPassword"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM">
            </EditText>

            <EditText
                android:id="@+id/password_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/password_old"
                android:hint=" 请输入新密码"
                android:textSize="18sp"
                android:singleLine="true"
                android:textStyle="bold"
                android:paddingBottom="17dip"
                android:paddingLeft="8dip"
                android:inputType="textPassword"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM">
            </EditText>

            <EditText
                android:id="@+id/password_renew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/password_new"
                android:hint=" 请确认新密码"
                android:textSize="18sp"
                android:singleLine="true"
                android:textStyle="bold"
                android:paddingBottom="17dip"
                android:paddingLeft="8dip"
                android:inputType="textPassword"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM">
            </EditText>

            <Button
                android:id="@+id/password_finish"
                android:layout_width="match_parent"
                android:layout_height="54dip"
                android:layout_below="@+id/password_renew"
                android:layout_marginTop="60dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/edittext_shape"
                android:text="确认修改"
                android:textSize="19sp"
                android:textColor="#ffffff">
            </Button>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>