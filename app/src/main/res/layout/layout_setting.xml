        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_below="@+id/login_saw_1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@drawable/setting_shadow1">
                <!--</RelativeLayout>-->

                <RelativeLayout
                    android:id="@+id/icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:text="头像"
                        android:textSize="46px"
                        android:textColor="#434343"
                        android:layout_centerVertical="true">
                    </TextView>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/setting_icon"
                        android:layout_width="60sp"
                        android:layout_height="60dp"
                        android:onClick="onClick"
                        android:src="@drawable/icon2"
                        android:layout_marginTop="15dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60dp">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="#c7c7c7"
                        android:layout_below="@+id/setting_icon"
                        android:layout_marginTop="15dip"
                        android:layout_marginLeft="13dip"
                        android:layout_marginRight="13dip">
                    </TextView>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right"
                        android:layout_marginRight="15dp">
                    </ImageView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_change_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:layout_below="@+id/icon">

<!--                    <TextView-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="0.1dip"-->
<!--                        android:background="#ffffff">-->
<!--                    </TextView>-->

                    <TextView
                        android:id="@+id/tv_change_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="18dip"
                        android:text="昵称"
                        android:textColor="#434343"
                        android:textSize="46px"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="#c7c7c7"
                        android:layout_below="@+id/tv_change_nickname"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="13dip"
                        android:layout_marginRight="13dip">
                    </TextView>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right"
                        android:layout_marginRight="15dp">
                    </ImageView>

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60dp"
                        android:text="昵称"
                        android:textSize="46px"
                        android:maxLines="1"
                        android:ellipsize="end">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_change_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:layout_below="@+id/setting_change_nickname">

                    <TextView
                        android:id="@+id/tv_change_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="18dip"
                        android:text="性别"
                        android:textColor="#434343"
                        android:textSize="46px"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="#c7c7c7"
                        android:layout_below="@+id/tv_change_sex"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="13dip"
                        android:layout_marginRight="13dip">
                    </TextView>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right"
                        android:layout_marginRight="15dp">
                    </ImageView>

                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60dp"
                        android:text="男"
                        android:textSize="46px"
                        android:maxLines="1"
                        android:ellipsize="end">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_change_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:layout_below="@+id/setting_change_sex">

                    <TextView
                        android:id="@+id/tv_change_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="18dip"
                        android:text="职业"
                        android:textColor="#434343"
                        android:textSize="46px"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="#c7c7c7"
                        android:layout_below="@+id/tv_change_work"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="13dip"
                        android:layout_marginRight="13dip">
                    </TextView>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right"
                        android:layout_marginRight="15dp">
                    </ImageView>

                    <TextView
                        android:id="@+id/work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60dp"
                        android:text="学生"
                        android:textSize="46px"
                        android:maxLines="1"
                        android:ellipsize="end">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_change_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:layout_below="@+id/setting_change_work">

                    <TextView
                        android:id="@+id/tv_change_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="18dip"
                        android:text="生日"
                        android:textColor="#434343"
                        android:textSize="46px"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="#c7c7c7"
                        android:layout_below="@+id/tv_change_birthday"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="13dip"
                        android:layout_marginRight="13dip">
                    </TextView>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/right"
                        android:layout_marginRight="15dp">
                    </ImageView>

                    <TextView
                        android:id="@+id/birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="60dp"
                        android:text="2001-1-1"
                        android:textSize="46px"
                        android:maxLines="1"
                        android:ellipsize="end">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_change_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:layout_below="@+id/setting_change_birthday">

                    <TextView
                        android:id="@+id/tv_change_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="18dip"
                        android:text="个人简介"
                        android:textColor="#434343"
                        android:textSize="46px"
                        >
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="3px"
                        android:background="#c7c7c7"
                        android:layout_below="@+id/intro"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="13dip"
                        android:layout_marginRight="13dip">
                    </TextView>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_alignParentRight="true"
                        android:src="#ffffff"
                        android:layout_marginRight="15dp">
                    </ImageView>

                    <TextView
                        android:id="@+id/intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="简介傲娇覅哦恶杰佛i恶杰佛i啊就哦打飞机啊覅时间封建士大夫房价放假覅健身房i就覅哦对就是佛阿飞joe系佛教发个"
                        android:textSize="42px"
                        android:maxLines="4"
                        android:ellipsize="end"
                        android:layout_below="@+id/tv_change_intro"
                        android:layout_marginLeft="18dip"
                        android:layout_marginRight="18dip"
                        android:layout_marginTop="12dp">
                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setting_change_intro"
                    android:onClick="onClick">

                    <TextView
                        android:id="@+id/tv_change_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="18dip"
                        android:text="修改密码"
                        android:textSize="46px"
                        android:textColor="#434343">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.1dip"
                        android:background="#ffffff"
                        android:layout_below="@+id/tv_change_password"
                        android:layout_marginTop="18dip"
                        android:layout_marginLeft="12dip">
                    </TextView>
                </RelativeLayout>

            </RelativeLayout>

<!--
        </androidx.cardview.widget.CardView>
