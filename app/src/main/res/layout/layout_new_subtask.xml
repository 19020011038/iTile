<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158px"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            >
            <ImageView
                android:layout_width="65px"
                android:layout_height="65px"
                android:src="@drawable/back"
                android:id="@+id/back"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建子任务"
            android:layout_centerInParent="true"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:clickable="true"
            android:textColor="@color/selector_text_press_color"
            android:id="@+id/finish"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#ffffff"
        android:layout_marginTop="25dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="6dp"
            android:paddingLeft="10dp"
            android:hint="任务名称(最多30个字)"
            android:background="@drawable/side_dark2"
            android:maxLength="30"
            android:singleLine="true"
            />



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaaaaa"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:background="#ffffff"

        android:padding="5dp">

        <EditText
            android:id="@+id/tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="6dp"
            android:paddingLeft="10dp"
            android:hint="任务描述(最多100字)"
            android:background="@drawable/side_dark2"
            android:maxLength="100"
            android:maxLines="4"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="50px"
            android:textColor="#808080"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaaaaa"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:id="@+id/re1">
            <Spinner
                android:layout_toRightOf="@+id/xzrq"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinner_nian1"
                android:layout_centerVertical="true"
                tools:ignore="MissingConstraints"></Spinner>
            <Spinner
                android:layout_toRightOf="@+id/spinner_nian1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinner_yue1"
                android:layout_centerVertical="true"
                tools:ignore="MissingConstraints"></Spinner>
            <Spinner
                android:layout_toRightOf="@+id/spinner_yue1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinner_ri1"
                android:layout_centerVertical="true"
                tools:ignore="MissingConstraints"></Spinner>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@+id/re1">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinner_HH1"
                android:layout_centerVertical="true"
                tools:ignore="MissingConstraints"></Spinner>
            <Spinner
                android:layout_toRightOf="@+id/spinner_HH1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinner_mm1"
                android:layout_centerVertical="true"
                tools:ignore="MissingConstraints"></Spinner>
        </RelativeLayout>




    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="50px"
            android:textColor="#808080"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#aaaaaa"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:id="@+id/re2">
        <Spinner
            android:layout_toRightOf="@+id/xzrq"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/spinner_nian2"
            android:layout_centerVertical="true"
            tools:ignore="MissingConstraints"></Spinner>
        <Spinner
            android:layout_toRightOf="@+id/spinner_nian2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/spinner_yue2"
            android:layout_centerVertical="true"
            tools:ignore="MissingConstraints"></Spinner>
        <Spinner
            android:layout_toRightOf="@+id/spinner_yue2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/spinner_ri2"
            android:layout_centerVertical="true"
            tools:ignore="MissingConstraints"></Spinner>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_below="@id/re2">
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinner_HH2"
                android:layout_centerVertical="true"
                tools:ignore="MissingConstraints"></Spinner>
            <Spinner
                android:layout_toRightOf="@+id/spinner_HH2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/spinner_mm2"
                android:layout_centerVertical="true"
                tools:ignore="MissingConstraints"></Spinner>
        </RelativeLayout>





    </RelativeLayout>
